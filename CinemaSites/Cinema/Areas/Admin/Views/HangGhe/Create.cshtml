@model Cinema.Areas.Admin.Models.HangGheModel

@{
    ViewData["Title"] = "Create";
}

<h4>@(ViewContext.RouteData.Values["id"] != null ?"Chỉnh sửa":"Thêm mới")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" asp-action="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" asp-route-id="@(ViewContext.RouteData.Values["id"] != null ?ViewContext.RouteData.Values["id"]:"")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @{
                if (ViewContext.RouteData.Values["id"] != null)
                {
                    <input type="hidden" asp-for="Id" />
                }
            }
            <div class="form-group">
                <label asp-for="TenHang" class="control-label"></label>
                <input asp-for="TenHang" class="form-control" />
                <span asp-validation-for="TenHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhong" class="control-label"></label>
                <select asp-for="MaPhong" class="form-control" asp-items="@(new SelectList(ViewBag.ListPhong,"Id","Value"))"></select>
            </div>
            
            <div class="form-group">
                <div class="form-group form-check">
                    <label class="form-check-label">
                        <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                    </label>
                </div>
             </div>
            <div class="form-group">
                <input type="submit" data-sucess="@(ViewContext.RouteData.Values["id"] != null ?"edit_hang":"create_hang")" value="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
