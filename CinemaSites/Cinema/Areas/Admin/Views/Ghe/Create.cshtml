@model Cinema.Areas.Admin.Models.GheModel

@{
    ViewData["Title"] = "Create";
}

<h4>@(ViewContext.RouteData.Values["id"] != null ?"Chỉnh sửa":"Thêm mới")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form id="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" asp-action="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" asp-route-id="@(ViewContext.RouteData.Values["id"] != null ?ViewContext.RouteData.Values["id"]:"")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @{
                if (ViewContext.RouteData.Values["id"] != null)
                {
                    <input type="hidden" asp-for="Id" />
                }
            }
            <div class="form-group">
                <label class="control-label">Số Lượng Ghế</label>
                <input name="soluong" type="number" min="1" max="15" placeholder="rows only 1 to 15" class="form-control" />
                <span asp-validation-for="TenGhe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaHangGhe" class="control-label"></label>
                <select name="idphong" asp-for="MaHangGhe" class="form-control" asp-items="@(new SelectList(ViewBag.ListHangGhe,"Id","Value"))"></select>
            </div>

            <div class="form-group">
                <input type="submit" data-sucess="@(ViewContext.RouteData.Values["id"] != null ?"edit_ghe":"create_ghe")" value="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
