@model Cinema.Areas.Admin.Models.LoaiPhimModel

@{
    ViewData["Title"] = "Create";
}

<h1>@(ViewContext.RouteData.Values["id"] != null ? "Edit" : "Create")</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        
        <form id="@(ViewContext.RouteData.Values["id"] != null ?"edit-loaiphim":"create-loaiphim")" asp-action="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" asp-route-id="@(ViewContext.RouteData.Values["id"] != null ? ViewContext.RouteData.Values["id"]:"")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            @{
                if (ViewContext.RouteData.Values["id"] != null)
                {
                    <input type="hidden" asp-for="Id" />
                }
            }
            <div class="form-group">
                <label asp-for="TenLoai" class="control-label">Tên loại</label>
                <input required="required" asp-for="TenLoai" class="form-control" />
                <span asp-validation-for="TenLoai" class="text-danger"></span>
            </div>
            

            <div class="form-group">
                <input type="submit" data-sucess="@(ViewContext.RouteData.Values["id"] != null ?"edit-loaiphim":"create-loaiphim")" class="btn btn-primary" value=" @(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" >
            </div>
        </form>
    </div>
</div>



@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
