@model Cinema.Areas.Admin.Models.CumRapModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

@{using (Html.BeginForm("Create", "CumRap", FormMethod.Post, new { enctype = "multipart/form-data" }))}


    <div class="row">
        <div class="col-12 stretch-card">
            <div class="card">
                <div class="card-body">
                  
                    <p class="card-description">
                        Tạo cụm rạp mới
                    </p>
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="TenCum" class="control-label">Tên cụm rạp</label>
                            <input asp-for="TenCum" class="form-control" />
                            <span asp-validation-for="TenCum" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="TrangThai" class="control-label">Trạng thái</label>
                            <input asp-for="TrangThai" class="form-control" value="1" />
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Tạo mới" class="btn btn-primary" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
