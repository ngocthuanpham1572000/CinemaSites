@model Cinema.Areas.Admin.Models.CumRapModel

@{
    ViewData["Title"] = "Details";
    Layout = null;
}

@{using (Html.BeginForm("Details", "CumRap", FormMethod.Post, new { enctype = "multipart/form-data" }))}


<div class="row">
    <div class="col-12 stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">
                    thông tin chi tiết
                </p>
                <dl class="row">
                    <dt class="col-sm-2">
                        Tên cụm rạp
                    </dt>
                    <dd class="col-sm-10">
                        @Html.DisplayFor(model => model.TenCum)
                    </dd>
                    <dt class="col-sm-2" hidden>
                        Trạng thái
                    </dt>
                    <dd class="col-sm-10" hidden>
                        @Html.DisplayFor(model => model.TrangThai)
                    </dd>
                </dl>
                <br />
                <br />
             
                    <button type="button" class="btn btn-danger" data-dismiss="modal">Đóng</button>
                    
              
            </div>
        </div>
    </div>
</div>


