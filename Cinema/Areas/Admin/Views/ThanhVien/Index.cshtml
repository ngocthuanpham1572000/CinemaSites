@model IEnumerable<Cinema.Areas.Admin.Models.ThanhVienModel>

@{
    ViewData["Title"] = "Index";
}

<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2>Thành viên</h2>
                    <br />
                    <form asp-controller="ThanhVien" asp-action="Index" method="post">
                        <div class="form-group">
                            <label for="">Nhập tên cần tìm: </label>
                            <input class="ten" type="text" name="ten" id="ten" value="" />
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Tìm" class="btn btn-primary" />
                        </div>
                    </form>
                    <p class="card-description">
                        Danh sách các thành viên
                    </p>
                    <p>
                        <a onclick="showModalThanhVien('@Url.Action("Create","ThanhVien",null,Context.Request.Scheme)','Thêm thành viên')" class="btn btn-success text-white">
                            Thêm thành viên
                        </a>
                    </p>
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>
                                        Tên
                                    </th>
                                    <th>
                                        Hình ảnh
                                    </th>
                                    <th>
                                        Giới tính
                                    </th>
                                    <th>
                                        Số điện thoại
                                    </th>
                                    <th>
                                        Email
                                    </th>
                                    <th>
                                        Tai khoản
                                    </th>
                                    <th>
                                        Mật khẩu
                                    </th>
                                    <th hidden>
                                        Trạng thái
                                    </th>

                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Ten)
                                        </td>
                                        <td>
                                            <img src="~/template_admin/images/thanhvien/@Html.DisplayFor(modelItem => item.HinhAnh)" alt="Alternate Text" />
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.GioiTinh)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.SDT)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.Email)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.TaiKhoan)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.MatKhau)
                                        </td>
                                        <td hidden>
                                            @Html.DisplayFor(modelItem => item.TrangThai)
                                        </td>
                                        <td>
                                            <a onclick="showModalThanhVien('@Url.Action("Edit","ThanhVien",new {id = item.Id },Context.Request.Scheme)','Sửa thành viên')" class="btn btn-info text-white">
                                                Edit
                                            </a>
                                            <a asp-action="Details" asp-route-id="@item.Id"><i class="fas fa-info"></i></a>
                                            <a onclick="showModalThanhVien('@Url.Action("Delete","ThanhVien",new {id = item.Id },Context.Request.Scheme)','Xóa thành viên')" class="btn btn-danger text-white">
                                                Delete
                                            </a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>

                </div>
            </div>
        </div>
    </div>


</div>
