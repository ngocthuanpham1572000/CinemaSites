@model Cinema.Areas.Admin.Models.HangGheModel

@{
    ViewData["Title"] = "Create";
}

<h4>@(ViewContext.RouteData.Values["id"] != null ?"Chỉnh sửa":"Thêm mới")</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" asp-route-id=
              "@(ViewContext.RouteData.Values["id"] != null ?ViewContext.RouteData.Values["id"]:"")">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            @{ 
                if (ViewContext.RouteData.Values["id"] != null)
                {
                    <input type="hidden" asp-for="Id"/>
                }
            }
            <div class="form-group">
                <label asp-for="TenHang" class="control-label"></label>
                <input asp-for="TenHang" class="form-control" />
                <span asp-validation-for="TenHang" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="MaPhong" class="control-label"></label>
                <select asp-for="MaPhong" class ="form-control" asp-items="@(new SelectList(ViewBag.ListPhong,"Id","TenPhong"))"></select>
            </div>
            <div class="form-group">
                <label asp-for="TrangThai" class="control-label">@Html.DisplayNameFor(model => model.TrangThai)</label>
                <input asp-for="TrangThai" class="form-control" />
                <span asp-validation-for="TrangThai" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="@(ViewContext.RouteData.Values["id"] != null ?"Edit":"Create")" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
