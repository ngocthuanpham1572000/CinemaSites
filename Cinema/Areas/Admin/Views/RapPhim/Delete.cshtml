<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2>Rạp phim</h2>
                    <p class="card-description">
                    </p>
                    <h3>Bạn có thực sự muốn xoá?</h3>
                    <br />
                    <br />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Tên rạp
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TenRap)
                        </dd>
                        <dt class="col-sm-2">
                            Địa chỉ
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.DiaChi)
                        </dd>
                        <dt class="col-sm-2">
                            Hình ảnh
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.HinhAnh)
                        </dd>
                        <dt class="col-sm-2">
                            Cụm rạp
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.CumRap.TenCum)
                        </dd>
                        <dt class="col-sm-2" hidden>
                            @Html.DisplayNameFor(model => model.TrangThai)
                        </dt>
                        <dd class="col-sm-10" hidden>
                            @Html.DisplayFor(model => model.TrangThai)
                        </dd>
                    </dl>

                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group" hidden>
                            <label asp-for="TenRap" class="control-label">Tên rạp</label>
                            <input asp-for="TenRap" class="form-control" />
                            <span asp-validation-for="TenRap" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                            <input asp-for="DiaChi" class="form-control" />
                            <span asp-validation-for="DiaChi" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="HinhAnh" class="control-label">Hình ảnh</label>
                            <input asp-for="HinhAnh" class="form-control" />
                            <span asp-validation-for="HinhAnh" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="MaCumRap" class="control-label">Cụm rạp</label>
                            <select asp-for="MaCumRap" class="form-control" asp-items="ViewBag.MaCumRap"></select>
                            <span asp-validation-for="MaCumRap" class="text-danger"></span>
                        </div>
                        <div class="form-group" hidden>
                            <label asp-for="TrangThai" class="control-label"></label>
                            <input asp-for="TrangThai" class="form-control" value="0" />
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <input type="submit" value="Xoá" class="btn btn-danger" />
                        </div>

                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index">Quay lại trang chủ</a>
    </div>

</div>