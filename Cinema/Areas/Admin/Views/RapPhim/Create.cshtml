@model Cinema.Areas.Admin.Models.RapPhimModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

@{using (Html.BeginForm("Create", "CumRap", FormMethod.Post, new { enctype = "multipart/form-data" }))}


<div class="row">
    <div class="col-12 stretch-card">
        <div class="card">
            <div class="card-body">

                <p class="card-description">
                    Thêm rạp phim mới
                </p>
                <form asp-action="Create" enctype="multipart/form-data">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TenRap" class="control-label">Tên rạp</label>
                        <input asp-for="TenRap" class="form-control" />
                        <span asp-validation-for="TenRap" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="DiaChi" class="control-label">Địa chỉ</label>
                        <input asp-for="DiaChi" class="form-control" />
                        <span asp-validation-for="DiaChi" class="text-danger"></span>
                    </div>
                    <div class="custom-file">
                        <input  type="file" name="ImageUpload" id="ImageUpload" accept="*.png|*.jpg" class="custom-file-input" onchange="ShowImagePreview(this, document.getElementById('previewImage'))" />
                        <label class="custom-file-label" for="ImageUpload">Chọn ảnh</label>
                    </div>
                    <div class="form-group">
                        <img src="~/template_admin/images/no-image.jpg" class="img-thumbnail" id="previewImage" alt="Alternate Text" />
                    </div>
                    <div class="form-group">
                        <select class="custom-select-sm" asp-for="MaCumRap"
                                asp-items="@(new SelectList(ViewBag.ListCumRap,"Id","TenCum"))">
                        </select>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="TrangThai" class="control-label"></label>
                        <input asp-for="TrangThai" class="form-control" value="1" />
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
