@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>

    @await Html.PartialAsync("_HeadPartial.cshtml")
    


</head>
<body>
    <section class="account-section">
        <div class="container">
            <div class="padding-top padding-bottom">
                <div class="account-area">
                    <div class="section-header-3">
                        <span class="cate">Quản lí</span>
                        <h2 class="title">Boleto Cinema</h2>
                    </div>
                    <form class="account-form">
                        <div class="form-group">
                            <label for="text">Tên đăng nhập<span>*</span></label>
                            <input type="text" placeholder="Nhập tên đăng nhập " id="username" required>
                        </div>
                        <div class="form-group">
                            <label for="pass3">Password<span>*</span></label>
                            <input type="password" placeholder="Nhập Password" id="pass" required>
                        </div>
                        <div class="form-group checkgroup">
                            <input type="checkbox" id="bal2" required checked>
                            <label for="bal2">Nhớ mật khẩu</label>
                            <a href="#0" class="forget-pass">Quên mật khẩu?</a>
                        </div>
                        <div class="form-group text-center">
                            <input type="submit" value="Đăng nhập">
                        </div>
                    </form>
                   

                </div>
            </div>
        </div>
    </section>

    @await Html.PartialAsync("_FooterPartial.cshtml")
    @await Html.PartialAsync("_ScriptPartial.cshtml")
   
</body>
</html>

