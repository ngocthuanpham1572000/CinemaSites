@model Cinema.Areas.Admin.Models.PhongModel

@{
    ViewData["Title"] = "Create";
}


<div class="row">
    <div class="col-md-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-title">Cụm rạp</p>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TenPhong" class="control-label"></label>
                        <input asp-for="TenPhong" class="form-control" />
                        <span asp-validation-for="TenPhong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaRap" class="control-label"></label>
                        <select asp-for="MaRap" class="form-control" asp-items="ViewBag.MaRap"></select>
                    </div>
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="TrangThai" /> @Html.DisplayNameFor(model => model.TrangThai)
                        </label>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Create" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
        



<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
