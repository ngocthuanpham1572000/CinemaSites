@model Cinema.Areas.Admin.Models.PhongModel

@{
    ViewData["Title"] = "Create";
    Layout = null;
}

@{using (Html.BeginForm("Create", "Phong", FormMethod.Post, new { enctype = "multipart/form-data" }))}


<div class="row">
    <div class="col-12 stretch-card">
        <div class="card">
            <div class="card-body">
                <p class="card-description">
                    Tạo phòng mới
                </p>
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="TenPhong" class="control-label">Tên Phòng</label>
                        <input asp-for="TenPhong" class="form-control" />
                        <span asp-validation-for="TenPhong" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="MaRap" class="control-label">Rạp phim</label>
                        <select asp-for="MaRap" class="form-control" asp-items="@(new SelectList(ViewBag.ListRap,"Id","TenRap"))"></select>
                    </div>
                    <div class="form-group" hidden>
                        <label asp-for="TrangThai" class="control-label"></label>
                        <input asp-for="TrangThai" class="form-control" value="1"/>
                        <span asp-validation-for="TrangThai" class="text-danger"></span>
                    </div>
                    <br />
                    <br />
                    <div class="form-group">
                        <button type="button" class="btn btn-secondary" data-dismiss="modal" style="margin-right:10px">Huỷ</button>
                        <input type="submit" value="Tạo mới" class="btn btn-primary" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>





@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
