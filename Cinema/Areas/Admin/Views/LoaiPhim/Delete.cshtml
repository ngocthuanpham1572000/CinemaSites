<div class="content-wrapper">
    <div class="row">
        <div class="col-12 grid-margin stretch-card">
            <div class="card">
                <div class="card-body">
                    <h2>Loại phim</h2>
                    <br />

                    <p class="card-description">
                    </p>
                    <h3>Bạn có thực sự muốn xoá?</h3>
                    <br />
                    <br />
                    <dl class="row">
                        <dt class="col-sm-2">
                            Tên loại
                        </dt>
                        <dd class="col-sm-10">
                            @Html.DisplayFor(model => model.TenLoai)
                        </dd>

                    </dl>
                    <form asp-action="Edit">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <input type="hidden" asp-for="Id" />
                        <div class="form-group" hidden>
                            <label asp-for="TenLoai" class="control-label">Tên loại</label>
                            <input asp-for="TenLoai" class="form-control" />
                            <span asp-validation-for="TenLoai" class="text-danger"></span>
                        </div>

                        <div class="form-group" hidden>
                            <label asp-for="TrangThai" class="control-label"></label>
                            <input asp-for="TrangThai" class="form-control" value="0" />
                            <span asp-validation-for="TrangThai" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="submit" value="Xoá" class="btn btn-danger" />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
    <div>
        <a asp-action="Index"><i class="fas fa-home"></i>Trang chủ</a>
    </div>

</div>
